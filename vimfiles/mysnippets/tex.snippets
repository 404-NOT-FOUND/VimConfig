priority -40

# environments
# -----------------------------------------------------------------------------

snippet "b(egin)?" "begin{} / end{}" br
\begin{${1:something}}
	${2:${VISUAL}}
\end{$1}
$0
endsnippet

# tables and figures

snippet table "Table environment" b
\begin{table}[${1:htpb}]
	\centering
	\caption{${2:caption}}
	\label{tab:${3:label}}
	\begin{${4:t}${4/(t)$|(a)$|(.*)/(?1:abular)(?2:rray)/}}{${5:c}}
	${6:${VISUAL}}
	\end{$4${4/(t)$|(a)$|(.*)/(?1:abular)(?2:rray)/}}
\end{table}
$0
endsnippet

snippet fig "Figure environment" b
\begin{figure}[${2:htpb}]
	\centering
	\includegraphics[width=${3:0.8}\linewidth]{${4:${VISUAL:name.ext}}}
	\caption{$5}
	\label{fig:${4/(\w+)\.\w+/$1/}}
\end{figure}
$0
endsnippet


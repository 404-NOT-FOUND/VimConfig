# math

snippet def "definitions" b
\begin{definition}[${1}]
	\label{def:${2:${1/\\\w+\{(.*?)\}|\\(.)|(\w+)|([^\w\\]+)/(?4:_:\L$1$2$3\E)/ga}}}
	${3:${VISUAL}}
\end{definition}
$0
endsnippet

snippet ppt "property" b
\begin{property}[${1}]
	\label{ppt:${2:${1/\\\w+\{(.*?)\}|\\(.)|(\w+)|([^\w\\]+)/(?4:_:\L$1$2$3\E)/ga}}}
	${3:${VISUAL}}
\end{property}
$0
endsnippet

snippet thm "theorems" b
\begin{theorem}[${1}]
	\label{thm:${2:${1/\\\w+\{(.*?)\}|\\(.)|(\w+)|([^\w\\]+)/(?4:_:\L$1$2$3\E)/ga}}}
